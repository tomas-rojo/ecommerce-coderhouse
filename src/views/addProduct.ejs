<%- include('partials/header'); -%>

<div class="jumbotron m-5 shadow-lg">
        <h2>Agregar Producto</h2>
            <br>
            <% if (error != false) { %>
                <div class="alert alert-danger alert-dismissible fade show font-italic lead" role="alert">
                    <%= error %>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
              <% } %>
        <div>
                <form action="/productos/agregar" method="POST">
                    <p>Nombre: <input type="text" name="name" class="form-control"></p> 
                    <p>Descripcion: <input type="text" name="description" class="form-control" required></p> 
                    <p>Codigo <input type="text" name="code" class="form-control" required></p> 
                    <p>Precio: <input type="text" name="price" class="form-control" min="0" step="0.01" autocomplete="off" required></p> 
                    <p>Foto URL: <input type="text" name="thumbnail" class="form-control" required></p> 
                    <p>Stock: <input type="number" name="stock" class="form-control" pattern="[0-9]{6}" required></p>
                    <div class="d-flex flex-row justify-content-center alig-items-center">         
                        <button class="btn btn-lg btn-outline-primary mt-5 mx-auto" type="submit"><strong>Agregar</strong></button>
                    </div>
                </form>
        </div>
</div>
    
<%- include('partials/footer'); -%>